<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, id: "email" %>
  </div>
  <p id = "emaildetails"></p>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", id: "password" %>
  </div>
  <p id = "passworddetails"></p>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<script>
  var emailHandle = document.getElementById('email');
  var passwordHandle = document.getElementById('password');
  var emaildetailsHandle = document.getElementById('emaildetails')
  var passworddetailsHandle = document.getElementById('passworddetails')


  emailHandle.onblur = function(){
    if(emailHandle.value.length == 0){
        emaildetailsHandle.innerHTML = "Email cannot be blank"
    } else {
        emaildetailsHandle.innerHTML = "";
    }
  };

  passwordHandle.onblur = function(){
    if(passwordHandle.value.length == 0){
      passworddetailsHandle.innerHTML = "Password cannot be blank"
    } else {
      passworddetailsHandle.innerHTML = "";
    }
  };
</script>
